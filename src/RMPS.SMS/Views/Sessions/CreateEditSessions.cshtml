
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    Layout = "~/Views/Shared/_ChildLayOut.cshtml";
}
@model int?
<div class="add-session" id="sessions">
    <div class="modal-header">
        <button type="button" class="close" onclick=" parent.jQuery.fancybox.close(); "><span><i class="fi-x-circle m-10 text-large"></i></span></button>
        @if (Model == null)
        {
            <h4 class="modal-title">Add Session</h4>
        }
        else
        {
            <h4 class="modal-title">Update Session</h4>
        }
    </div>
    <div class="modal-body">
        <table class="w-100">
            <tr>
                <td class="vAlign text-left">
                    <label class="control-label m-b-10 p-r-5 p-t-7">Start Date</label><span class="redColor m-r-10">*</span>
                </td>
                <td class="vAlign">
                    <input type="text" class="form-control" placeholder="Start Date" data-bind="datePicker: {
   on: StartDate,
   dateFormat: 'mm/dd/yy',
   changeYear: true,
   changeMonth: true,
  }, bTooltip: { placement: 'top' }">
                </td>
            </tr>
            <tr>
                <td class="vAlign text-left">
                    <label class="control-label m-b-10 p-r-5 p-t-7">End Date</label><span class="redColor m-r-10">*</span>
                </td>
                <td class="vAlign">
                    <input type="text" class="form-control" placeholder="End Date" data-bind="datePicker: {
   on: EndDate,
   dateFormat: 'mm/dd/yy',
   changeYear: true,
   changeMonth: true,
  }, bTooltip: { placement: 'top' }">
                </td>
            </tr>
        </table>
    </div>
    <div class="modal-footer">
        @if (Model == null)
        {
            <button type="button" class="btn btn-blue button-w-120" data-bind="ajaxSubmit: post, validationLog: true">Create Session</button>
        }
        else
        {
            <button class="btn btn-blue button-w-120" data-bind="ajaxSubmit: put, validationLog: true"><i class="icon-refresh icon-white"></i>Update Session</button>
        }
        <button type="button" class="btn btn-default button-style button-w-100" onclick=" parent.jQuery.fancybox.close(); ">Cancel</button>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        var id = '@(Model.HasValue ? Model.Value.ToString() : "")';
        var postSessionsUrl = "/api/sessions/create";
        var getSessionsUrl = "/api/sessions/edit/{0}";
        var putSessionsUrl = "/api/sessions/update/{0}";
    </script>
    <script src="~/assets/views/Sessions/CreateEditSessions.js"></script>
}