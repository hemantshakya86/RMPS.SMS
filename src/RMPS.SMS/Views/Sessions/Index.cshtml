

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Session</h2>
<div class="row">
    <!-- TASKS -->
    <div class="col-sm-12">
        <div class="bg-white p-20 b-bot-2px-gray-light m-t-10">
            <div class="row">
                <div class="col-sm-12">

                    <!-- Nav tabs -->
                    @*<ul class="nav nav-tabs" role="tablist">
                        <li class="active"><a href="#index" role="tab" data-toggle="tab">Student</a></li>
                        @*<li><a href="#user-groups" role="tab" data-toggle="tab">User Groups</a></li>*@
                    @*@<li><a href="#roles" role="tab" data-toggle="tab">Roles</a></li>
                        </ul>*@
                    <!-- Tab panes -->
                    <div class="tab-content">

                        <!-- Users Tab Starts-->
                        <div class="tab-pane active">
                            <div class="row">
                                <div class="col-sm-12">
                                    @*<h3>Student</h3>*@
                                    <hr>
                                    <div class="btn-group">
                                        <a href="@Url.Action("CreateEditSessions", "Sessions")" class="addEditSession btn btn-primary" data-fancybox-type="iframe">Add Session</a>
                                        <div class="btn btn-alt">
                                            <i class="fi-plus text-white"></i>
                                        </div>
                                    </div>
                                    <table class="w-100 m-t-10">
                                        <tr>
                                            <td>
                                                <input type="text" class="form-control" style="width:200px" placeholder="Start Date" data-bind="datePicker: {on: StartDate,dateFormat: 'mm/dd/yy',changeYear: true,changeMonth: true,}, bTooltip: { placement: 'top' }">
                                            </td>
                                            <td>
                                                @*<input type="date" class="input-large input-light brad" placeholder="Start Date" maxlength="30" data-bind="valueUpdate: ['afterkeydown', 'propertychange', 'input'], value: StartDate">*@
                                                @*<input type="date" class="input-large input-light brad" placeholder="End Date" maxlength="30" data-bind="valueUpdate: ['afterkeydown', 'propertychange', 'input'], value: EndDate">*@
                                                <input type="text" class="form-control" style="width: 200px" placeholder="End Date" data-bind="datePicker: {on: EndDate,dateFormat: 'mm/dd/yy',changeYear: true,changeMonth: true,}, bTooltip: { placement: 'top' }">
                                            </td>
                                            <td>
                                                <div class="btn-group m-b-10">
                                                    <button type="button" class="btn btn-primary" data-bind="click: getSearchResults">Filter</button>
                                                    <div class="btn btn-alt">
                                                        <i class="fa fa-search text-white"></i>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-blue m-b-10" data-bind="click: resetUser">Reset</button>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="row" id="student-sessions">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-bordered m-t-10 table-l-a td-ellipsis">
                                        <thead>
                                            <tr>
                                                <th>Start Date</th>
                                                <th>End Date</th>

                                                <th class="input-w-80 table-c-a">Edit</th>
                                                @*<th class="table-c-a">Remove</th>*@
                                            </tr>
                                        </thead>
                                        <tbody style="display: none;" data-bind="foreach: Items(), visible: Items().length > 0, visible: !loading()">
                                            <tr>
                                                <td>
                                                    <div data-bind="dateText: StartDate,dateFormat: 'MM/DD/YYYY', isUtc: false"></div>
                                                </td>
                                                <td>
                                                    <div data-bind="dateText: EndDate,dateFormat: 'MM/DD/YYYY', isUtc: false"></div>
                                                </td>

                                                <td class="table-c-a">
                                                    <a class="editSession" data-fancybox-type="iframe" data-bind="attr: { href: '/sessions/editsession/' + ID() }"><i class="fi-pencil"></i></a>
                                                </td>
                                                @*<td>
                                                        <a data-bind="attr: { href: '/Users/deleteuser/' + ID() }" class="deleteUser" data-fancybox-type="iframe"><i class="fi-x"></i></a>
                                                    </td>*@
                                            </tr>
                                        </tbody>
                                        <tfoot>
                                            <tr style="display: none;" data-bind="visible: !loading() && Items().length == 0">
                                                <td colspan="3" class="table-c-a">
                                                    No record found!
                                                </td>
                                            </tr>
                                            <tr data-bind="visible: loading">
                                                <td colspan="3" class="table-c-a">
                                                    <div class="tb-loader">
                                                        <img src="~/assets/img/loading.gif" alt="" width="50" height="50" />
                                                        <div class="m-t-5">Loading...</div>
                                                    </div>
                                                </td>
                                            </tr>
                                            
                                        </tfoot>

                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
@section Scripts
{

    <script type="text/javascript">
        var getSessionsUrl = "/api/sessions/search?startdate={0}&sortBy={1}&sortDirection={2}";
        $(document).ready(function () {
            $('.addEditSession').fancybox({
                maxWidth: 1000,
                maxHeight: 600,
                fitToView: false,
                width: '430px',
                height: '250px',
                autoSize: false,
                closeClick: false,
                openEffect: 'none',
                closeEffect: 'none',
                padding: 0,
                closeBtn: false,
            });
            $('.editSession').fancybox({
                maxWidth: 1000,
                maxHeight: 600,
                fitToView: false,
                width: '430px',
                height: '250px',
                autoSize: false,
                closeClick: false,
                openEffect: 'none',
                closeEffect: 'none',
                padding: 0,
                closeBtn: false,
            });
        });
    </script>

    <script src="~/assets/views/Sessions/Sessions.js"></script>
}