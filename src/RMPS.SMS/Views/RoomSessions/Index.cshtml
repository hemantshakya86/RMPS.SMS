@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Room Session</h2>


<div class="row">
    <!-- TASKS -->
    <div class="col-sm-12">
        <div class="bg-white p-20 b-bot-2px-gray-light m-t-10">
            <div class="row">
                <div class="col-sm-12">

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="active"><a href="#roomsessions" role="tab" data-toggle="tab">Room Session</a></li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content" id="roomsessions">

                        <!-- Users Tab Starts-->
                        <div class="tab-pane active">
                            <div class="row">
                                <div class="col-sm-12">
                                    @*<h3>Student</h3>*@
                                    <hr>
                                    <div class="btn-group">
                                        <a href="" data-bind="attr:{href:'/roomsessions/createroomsessions'}" class="createEditRoomSessions btn btn-primary" data-fancybox-type="iframe">Add Room Session</a>
                                        <div class="btn btn-alt">
                                            <i class="fi-plus text-white"></i>
                                        </div>
                                    </div>
                                    @*<table class="w-100 m-t-10">
                                            <tr>
                                                <td class="vAlign">
                                                    <div class="">
                                                        <input type="text" class="input-large input-light brad" placeholder="Class Name" maxlength="30" data-bind="">
                                                        <div class="btn-group m-b-10">
                                                            <button type="button" class="btn btn-primary" data-bind="click: getSearchResults">Filter</button>
                                                            <div class="btn btn-alt">
                                                                <i class="fa fa-search text-white"></i>
                                                            </div>
                                                        </div>
                                                        <button type="button" class="btn btn-blue m-b-10" data-bind="click: resetClassRooms">Reset</button>
                                                    </div>
                                                </td>
                                            </tr>
                                        </table>*@
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-bordered m-t-10 table-l-a td-ellipsis">
                                        <thead>
                                            <tr>
                                                <th class="input-w-80 table-c-a">Session</th>

                                                <th class="input-w-80 table-c-a">Class</th>
                                                <th class="input-w-80 table-c-a">Section</th>
                                                <th class="input-w-80 table-c-a">Courses</th>
                                                <th class="input-w-80 table-c-a">Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody style="display: none;" data-bind="foreach: Items(), visible: Items().length > 0, visible: !loading()">
                                            <tr>
                                                <td>
                                                    <div class="input-w-80 table-c-a" data-bind="text: Session"></div>
                                                </td>
                                                <td>
                                                    <div class="input-w-80 table-c-a" data-bind="text: Class"></div>
                                                </td>
                                                <td>
                                                    <div class="input-w-80 table-c-a" data-bind="text: Section"></div>
                                                </td>
                                                <td>
                                                    <div class="input-w-80 table-c-a" data-bind="text: Course,attr:{title:Course}"></div>
                                                </td>

                                                <td class="table-c-a">
                                                    <a class="deleteRoomSessions" data-fancybox-type="iframe" data-bind="attr: { href: '/roomsessions/delete/' + ID() }"><i class="fi-x"></i></a>
                                                </td>
                                            </tr>
                                        </tbody>
                                        <tfoot>
                                            <tr style="display: none;" data-bind="visible: !loading() && Items().length == 0">
                                                <td colspan="5" class="table-c-a">
                                                    No record found!
                                                </td>
                                            </tr>
                                            <tr data-bind="visible: loading">
                                                <td colspan="5" class="table-c-a">
                                                    <div class="tb-loader">
                                                        <img src="~/assets/img/loading.gif" alt="" width="50" height="50" />
                                                        <div class="m-t-5">Loading...</div>
                                                    </div>
                                                </td>
                                            </tr>
                                        </tfoot>

                                    </table>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
@section Scripts
{
    <script type="text/javascript">
        var getRoomSessionsUrl = "/api/roomsessions/search?name={0}&sortBy={1}&sortDirection={2}";
        $(document).ready(function () {
            $('.addRoomSessions').fancybox({
                maxWidth: 1000,
                maxHeight: 1000,
                fitToView: false,
                width: '900px',
                height: '600px',
                autoSize: false,
                closeClick: false,
                openEffect: 'none',
                closeEffect: 'none',
                padding: 0,
                closeBtn: false,
            });
            $('.editRoomSessions').fancybox({
                maxWidth: 1000,
                maxHeight: 1000,
                fitToView: false,
                width: '900px',
                height: '600px',
                autoSize: false,
                closeClick: false,
                openEffect: 'none',
                closeEffect: 'none',
                padding: 0,
                closeBtn: false,
            });
            $('.deleteRoomSessions').fancybox({
                maxWidth: 500,
                maxHeight: 250,
                fitToView: false,
                width: '400px',
                height: '200px',
                autoSize: false,
                closeClick: false,
                openEffect: 'none',
                closeEffect: 'none',
                padding: 0,
                closeBtn: false,
            });
        });

    </script>
    <script src="~/assets/views/RoomSessions/RoomSessions.js"></script>
}
