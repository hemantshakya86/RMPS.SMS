
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@{
    Layout = "~/Views/Shared/_ChildLayOut.cshtml";
}
@model int?
<link href="~/assets/css/select2.css" rel="stylesheet" />
<div class="add-role" id="courses">
    <div class="modal-header">
        <button type="button" class="close" onclick="parent.jQuery.fancybox.close();"><span><i class="fi-x-circle m-10 text-large"></i></span></button>
        @if (Model == null)
        {
            <h4 class="modal-title">Add Courses</h4>
        }
        else
        {
            <h4 class="modal-title">Update Courses</h4>
        }
    </div>
    <div class="modal-body">
        <table class="w-100">
            <tr>
                <td class="vAlign text-left">
                    <label class="control-label m-b-10 p-r-5 p-t-7">Course Name</label><span class="redColor m-r-10">*</span>
                </td>
                <td class="vAlign">
                    <input type="text" class="form-control m-b-10 w-250" placeholder="Course Name" data-bind="valueUpdate: ['afterkeydown', 'propertychange', 'input'], value: Name, bTooltip: { placement: 'top' }" maxlength="40" />
                </td>
            </tr>
            @*<tr>
                    <td class="vAlign text-left">
                        <label class="control-label m-b-10 p-r-5 p-t-7">No. of Student</label>
                    </td>
                    <td class="vAlign">
                        <input type="text" class="form-control m-b-10 w-250" placeholder="No. of Student" data-bind="valueUpdate: ['afterkeydown', 'propertychange', 'input'], value: NumberOfStudent, bTooltip: { placement: 'top' }" maxlength="40" />
                    </td>
                </tr>*@

        </table>
    </div>
    <div class="modal-footer">
        @if (Model == null)
        {
            <button type="button" class="btn btn-blue button-w-100" data-bind="ajaxSubmit: post, validationLog: true">Create Course</button>
        }
        else
        {
            <button class="btn btn-blue button-w-100" data-bind="ajaxSubmit: put, validationLog: true"><i class="icon-refresh icon-white"></i>Update Course</button>
        }
        <button type="button" class="btn btn-default button-style button-w-100" onclick="parent.jQuery.fancybox.close();">Cancel</button>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        var id = '@(Model.HasValue ? Model.Value.ToString() : "")';
        var postCoursesUrl = "/api/course/create";
        var getCoursesUrl = "/api/course/edit/"+id;
        var putCoursesUrl = "/api/course/update/"+id;
    </script>
    <script src="~/assets/views/Courses/createEditCourses.js"></script>
}